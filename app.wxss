/**app.wxss**/

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  /* align-items: center; */
  /* justify-content: space-between; */
  padding: 0;
  box-sizing: border-box;
}
.lower-loading {
  display: flex;
  height: 100rpx;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  font-size: 22rpx;
  color: #B0B0B0;
  letter-spacing: 0;
}
.lower-loading-txt {
  margin-left: 12rpx;
}
.lower-loading-gif {
  width: 48rpx;
  height: 48rpx;
}
.list-tabs {
  position: fixed;
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 100rpx;
  bottom: 0;
  left: 0;
  background: #FFFFFF;
  box-shadow: 0 -2rpx 10rpx 0 rgba(0, 0, 0, 0.10);
  font-size: 20rpx;
  color: #666666;
  letter-spacing: 0;
}
.list-tabs .tab-1,
.list-tabs .tab-2 {
  height: 100%;
  width: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.list-tabs .active {
  color: #FF4338;
}

.list-tabs image {
  margin-top: 9rpx;
  margin-bottom: 8rpx;
  width: 54rpx;
  height: 54rpx;
}