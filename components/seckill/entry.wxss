.seckill-entry {
  position: relative;
  width: 750rpx;
  background-image: linear-gradient(-180deg, rgba(255, 248, 244, 0.00) 25%, rgba(255, 238, 223, 0.81) 86%, #ffebdb 100%);
  padding-top: 10rpx;
  box-sizing: border-box;
}

.seckill-entry::before {
  position: absolute;
  left: 0;
  bottom: 0;
  content: '';
  width: 750rpx;
  height: 100rpx;
  background-image: linear-gradient(-180deg, rgba(255, 255, 255, 0.00) 0%, #fff 100%);
}

.seckill-entry .se-circle-1 {
  position: absolute;
  left: 12rpx;
  top: 202rpx;
  width: 93rpx;
  height: 93rpx;
  border-radius: 100%;
  background-image: linear-gradient(-142deg, #ffd3c3 0%, #fde4ce 100%);
}

.seckill-entry .se-circle-2 {
  position: absolute;
  left: 530rpx;
  top: 252rpx;
  width: 36rpx;
  height: 36rpx;
  border-radius: 100%;
  background-image: linear-gradient(-142deg, #ffd3c3 0%, #fde4ce 100%);
}

.seckill-entry .se-circle-3 {
  position: absolute;
  left: 636rpx;
  top: 0rpx;
  width: 22rpx;
  height: 22rpx;
  border-radius: 100%;
  opacity: 0.52;
  background-image: linear-gradient(-142deg, #ffd3c3 0%, #fde4ce 100%);
}

.seckill-entry .se-circle-4 {
  position: absolute;
  left: 646rpx;
  top: 30rpx;
  width: 92rpx;
  height: 92rpx;
  border-radius: 100%;
  opacity: 0.48;
  background-image: linear-gradient(-142deg, #ffd3c3 0%, #fde4ce 100%);
}

.seckill-entry .se-header {
  position: relative;
  text-align: center;
  font-size: 0;
}

.seckill-entry .se-header text {
  text-align: center;
  font-size: 22rpx;
  color: #666;
  line-height: 30rpx;
}

.seckill-entry .se-header text::before, .seckill-entry .se-header text::after {
  content: '-';
  padding: 0 15rpx;
  color: #ff4338;
}

.seckill-entry .se-content {
  position: relative;
  margin: 25rpx auto 50rpx;
  width: 670rpx;
  height: 200rpx;
  background: #fff;
  box-shadow: 0 0 15rpx 0 rgba(125, 101, 68, 0.10);
  border-radius: 8rpx;
  box-sizing: border-box;
  padding-left: 333rpx;
  padding-top: 26rpx;
}

.seckill-entry .se-content .se-cover {
  position: absolute;
  left: 0;
  top: 0;
  width: 300rpx;
  height: 200rpx;
  border-top-left-radius: 8rpx;
  border-bottom-left-radius: 8rpx;
}

.seckill-entry .se-content .se-name {
  top: 26rpx;
  font-size: 30rpx;
  line-height: 30rpx;
  color: #333;
  letter-spacing: 0;
}

.seckill-entry .se-content .se-desc {
  padding: 13rpx 0 38rpx;
  display: flex;
  align-items: center;
  line-height: 36rpx;
}

.seckill-entry .se-content .se-desc .se-tag {
  font-size: 18rpx;
  color: #fff;
  letter-spacing: 0;
  line-height: 24rpx;
  background-image: linear-gradient(90deg, #feb382 0%, #ff4338 89%);
  border-radius: 4rpx;
  width: 50rpx;
  height: 26rpx;
  text-align: center;
}

.seckill-entry .se-content .se-desc .se-price {
  padding: 0 10rpx 0;
  font-size: 32rpx;
  color: #ff4338;
  line-height: 36rpx;
}

.seckill-entry .se-content .se-desc .se-original {
  padding: 0 16rpx 0;
  font-size: 24rpx;
  color: #b0b0b0;
  line-height: 20rpx;
  text-decoration: line-through;
}

.seckill-entry .se-content .se-surplus {
  position: relative;
  font-size: 18rpx;
  color: #151515;
  line-height: 40rpx;
  display: flex;
  align-items: center;
}

.seckill-entry .se-content .se-surplus .ses-count {
  position: absolute;
  left: 0;
  top: -9rpx;
  font-size: 20rpx;
  color: #ff4338;
  line-height: 20rpx;
}

.seckill-entry .se-content .se-surplus .ses-progress {
  background: #eee;
  border-radius: 4rpx;
  width: 244rpx;
  height: 7rpx;
  margin-right: 17rpx;
}

.seckill-entry .se-content .se-surplus  .ses-progress-done {
  height: 100%;
  width: 50%;
  background-image: linear-gradient(-90deg, #ffbb8f 0%, #ff564c 100%);
  border-radius: 4rpx;
}

.seckill-entry .se-content .se-surplus  text {
  font-size: 24rpx;
}

.seckill-entry .se-content .se-time {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #333;
  line-height: 20rpx;
}

.seckill-entry .se-content .se-time text {
  background: #333;
  border-radius: 4rpx;
  text-align: center;
  font-size: 20rpx;
  color: #fff;
  line-height: 28rpx;
  width: 30rpx;
  margin:0 5rpx;
}
.seckill-entry .se-content .se-time text:first-child {
  margin-left: 0;
}
.seckill-entry .se-content .se-time text:last-child {
  margin-right: 13rpx;
}
