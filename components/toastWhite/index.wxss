.c-toast-modal {
  position: fixed;
  left: 0;
  top: 0;
  z-index: 10;
  width: 100%;
  height: 100%;
}

.c-toast-modal .c-toast-white-wrap {
  max-width: 365rpx;
  padding: 40rpx;
  color: #666666;
  font-size: 28rpx;
  background-color: #fff;
  margin: 425rpx auto 0;
  text-align: center;
  border-radius: 6rpx;
  box-shadow: 0 0 5rpx 2rpx #eee;
}