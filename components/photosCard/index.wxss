.c-picture {
  padding: 0 0;
  font-size: 34rpx;
}

.s-pic-wrap {
  font-size: 0;
}

.s-pic-wrap .pic {
  width: 216rpx;
  height: 216rpx;
  display: inline-block;
  margin-right: 7rpx;
  margin-bottom: 7rpx;
  box-sizing: border-box;
}

.s-pic-from {
  color: #B0B0B0;
  font-size: 22rpx;
  margin: 30rpx 0;
}

.sigle-pic {}

.sigle-pic.width {
  width: 384rpx;
}

.sigle-pic.height {
  height: 384rpx;
}

.c-main-swiper {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 100;
  background-color: #000;
}

.c-main-swiper swiper-item .slide-image {
  width: 100%;
  height: 100%;
  background-repeat: no-repeat;
  background-position: center;
  background-size: contain;
}

.swiper-index {
  position: absolute;
  top: 56rpx;
  left: 0;
  width: 100%;
  font-size: 40rpx;
  color: #fff;
  text-align: center
}