<!-- 鼓励金钱窗 -->
<template name="riseMoneyModal">
  <view class="c-modal" wx:if="{{isShowRiseMoneyModal}}">
    <view class="c-wrap c-rise-money-wrap">
      <view class="s-close" bindtap="closeRiseMoneyModal"></view>
      <view class="s-header">
        <view class="nick">
          <view class="s-avatar" style="background-image:url({{avatarUrl}})"></view>
          {{nick}}
        </view>
        <view class="s-title">您帮{{nick}}升值了¥{{riseMoney}}</view>
      </view>
      <view class="s-desc">您现在拥有鼓励金</view>
      <view class="s-money">¥{{money}}</view>
      <view class="s-btn">转发好友升值鼓励金</view>
    </view>
  </view>
</template>