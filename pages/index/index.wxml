<image src="{{trackSeed}}" style="width:0;height:0;" wx:if="{{trackSeed.length}}"></image>
<form bindsubmit="formSubmit" report-submit="true" class="submit-from">
  <button formType="submit" class="submit-btn">
    <include src="qunList.wxml" wx:if="{{currentList=='qunList'}}" />
    <include src="promoList.wxml" wx:if="{{currentList=='promoList'}}" />
    <view class="list-tabs">
      <image src="/images/tab1.png" class="icon-person hide"></image>
      <image src="/images/tab1-active.png" class="icon-person hide"></image>
      <image src="/images/tab2.png" class="icon-person hide"></image>
      <image src="/images/tab2-active.png" class="icon-person hide"></image>
      <view class="tab-2" bindtap="switchTab2">
        <image src="/images/tab2-active.png" class="icon-person" wx:if="{{currentList == 'promoList'}}"></image>
        <image src="/images/tab2.png" class="icon-person" wx:else></image>
        <text class="promo-num" wx-if="{{!promoListLoaded && promoNum != 0}}">{{promoNum}}</text>
        <text class="{{ currentList == 'promoList'? 'active' : ''}}">活动</text>
      </view>
      <view class="tab-1" bindtap="switchTab1">
        <image src="/images/tab1-active.png" class="icon-person" wx:if="{{currentList == 'qunList'}}"></image>
        <image src="/images/tab1.png" class="icon-person" wx:else></image>
        <text class="{{ currentList == 'qunList'? 'active' : ''}}">同城群</text>
      </view>
    </view>
    <loading hidden="{{hidden}}">加载中...</loading>

    <!-- 获得奖励金弹窗 -->
    <import src="../../components/getMoneyModal/index.wxml" />
    <template is="getMoneyModal" data="{{isShowGetMoneyModal:isShowGetMoneyModal}}" />

    <!-- 升值奖励金弹窗 -->
    <import src="../../components/riseMoneyModal/index.wxml" />
    <template is="riseMoneyModal" data="{{isShowRiseMoneyModal:isShowRiseMoneyModal}}" />
  </button>
</form>