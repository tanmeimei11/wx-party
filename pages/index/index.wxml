<!--index.wxml-->
<view class="container">
  <view class="qun-list">
    <block wx:for="{{qunList}}" wx:key="id">
      <view class="qun" index="{{index}}" id="{{item.id}}" catchtap="redictDetail">
        <image class="avatar" src="{{item.avatar}}"></image>
        <view class="info">
          <view class="name">
            <text>{{item.group_name}}</text>
          </view>
          <view>
            <text class="num">{{item.female_count + item.male_count }}</text>
            <text class="member-nickname">{{item.member.username}}</text>
          </view>
        </view>
        <view class="reply-num">{{item.replies}}</view>


      </view>
    </block>
  </view>
  <loading hidden="{{hidden}}">
    加载中...
  </loading>
</view>