/**index.wxss**/

.c-bottom-nav {
  position: fixed;
  bottom: 0;
  left: 0;
  height: 100rpx;
  width: 100%;
  font-size: 0;
  box-shadow: rgba(0, 0, 0, 0.1) 0px -2px 10px;
}

.c-bottom-nav .s-btn {
  width: 50%;
  font-size: 36rpx;
  display: inline-block;
  text-align: center;
  color: #333333;
  line-height: 100rpx;
}

.c-bottom-nav .s-btn.btn-sign {
  background-color: #FF4338;
  color: #fff;
}

.c-main-swiper {
  width: 100%;
  height: 500rpx;
  position: relative;
}

.c-main-swiper swiper-item {}

.c-main-swiper swiper-item .slide-image {
  width: 100%;
  height: 100%;
  background-repeat: no-repeat;
  background-position: center;
  background-size: cover;
}

.c-main-swiper .IndicatorDots {
  position: absolute;
  bottom: 50rpx;
  right: 40rpx;
}

.c-main-swiper .IndicatorDots .dot {
  width: 12rpx;
  height: 12rpx;
  background-color: #D8D8D8;
  border-radius: 50%;
  display: inline-block;
  margin: 0 5rpx;
}

.c-main-swiper .IndicatorDots .dot.active {
  width: 24rpx;
  border-radius: 12rpx;
}