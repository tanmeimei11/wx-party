/**index.wxss**/

.container {
  padding-bottom: 50rpx;
  position: relative;
}

.se-time{
  text-align: center;
  font-size: 60rpx;
  color: #333;
  margin-top: 30rpx;
  padding-bottom: 70rpx;
  box-shadow: 0 8rpx 20rpx 0 rgba(0,0,0,0.03);
  margin-bottom: 100rpx;
}

.r-txt {
  width: 750rpx;
  margin-top: 71rpx;
}

.r-txt .r-img {
  width: 129rpx;
  height: 129rpx;
  background-image: url(https://inimg07.jiuyan.info/in/2017/10/31/1B56058C-0CEE-8710-CB3D-CBCF6D4EC8D9.png);
  background-repeat: no-repeat;
  background-size: contain;
  background-position: center;
  margin: auto;
}

.r-txt .r-suc-txt {
  font-size: 40rpx;
  margin: auto;
  text-align: center;
  font-size: #333;
}

.r-txt .r-txt1 {
  font-size: 28rpx;
  color: #666;
  text-align: center;
  margin-top: 10rpx;
}

.r-txt .r-txt2 {
  font-size: 28rpx;
  color: #888;
  text-align: center;
}

.r-avatar{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content:center;
}

.unionSucc .r-avatar{
  margin: 40rpx 0 80rpx;
  padding-bottom: 40rpx;
  box-shadow: 0 8rpx 20rpx 0 rgba(0,0,0,0.03);
}

.r-avatar>view{
  margin: 0 42rpx;
  position: relative;
  width: 128rpx
}

.r-avatar .sex{
  width: 128rpx;
  height: 128rpx;
  border: 2rpx solid #fff;
  border-radius: 50%;
  background-repeat: no-repeat;
  background-size: cover;
  background-position: center;
  position: relative;
}

.r-avatar .sex::after{
  content: '';
  position: absolute;
  top: 68.75%;
  left: 68.75%;
  width: 31.25%;
  height: 31.25%;
  background-repeat: no-repeat;
  background-size: cover;
  background-position: center;
}

.r-avatar>.male .sex::after{
  background-image: url(http://inimg07.jiuyan.info/in/2017/11/28/6ED5D101-D20C-2AAC-EE6B-48F0E9E7CFD3.png);
}

.r-avatar>.female .sex::after{
  background-image: url(http://inimg05.jiuyan.info/in/2017/11/28/64BAA0EE-2CFE-1D3C-3F2E-A15C2D326205.png);
}

.r-avatar>.none .sex::after{
  background-image: none!important
}

.r-avatar .sex.noone{
  background-image: url(https://inimg07.jiuyan.info/in/2017/11/28/29AB4215-BACF-F96B-88A0-A0BE33046BF0.png);
}

.r-avatar>view text{
  width: 150%;
  margin-left: -25%;
  text-align: center;
  font-size: 28rpx;
  color: #333;
  line-height: 35rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  display: inline-block;
  margin-top: 16rpx;
}

.r-avatar>view.none text{
  color: #b0b0b0;
}


.r-link {
  width: 420rpx;
  padding: 1rpx 0 64rpx;
  border-radius: 8rpx;
  background: #fff;
  box-shadow: 0 0 15rpx 0 rgba(0, 0, 0, 0.1);
  margin: 50rpx auto;
}

.r-link .r-link-img {
  width: 120rpx;
  height: 120rpx;
  margin: 60rpx auto 0;
  background-image: url(https://inimg01.jiuyan.info/in/2017/10/15/6CD1BC72-FBBB-BC4E-528E-50943934E20F.jpg);
  background-repeat: no-repeat;
  background-size: contain;
  background-position: center;
}

.r-link {
  text-align: center;
}

.r-link .r-link-name {
  margin-top: 16rpx;
  font-size: 28rpx;
  color: #333;
}

.r-link .r-link-wxid {
  font-size: 24rpx;
  color: #888;
  margin-top: 5rpx;
}

.r-link .r-link-btn {
  width: 320rpx;
  height: 80rpx;
  border: 1rpx solid #FF4338;
  border-radius: 100rpx;
  background: #fff;
  margin: 60rpx auto 0;
  font-size: 28rpx;
  color: #FF4338;
  line-height: 80rpx;
  position: relative;
  overflow: hidden;
}

.sr-share,.r-btn{
  width: 420rpx;
  height: 80rpx;
  margin: 50rpx auto 77rpx;
  background: #ff4338;
