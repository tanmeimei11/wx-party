/**index.wxss**/

.container {
  text-align: left;
  width: 100%;
  padding: 0 40rpx;
}

.c-title {
  color: #333333;
  font-size: 40rpx;
  padding: 60rpx 0;
  border-bottom: 1rpx solid #E0E0E0;
}

.c-line {
  border-bottom: 1rpx solid #E0E0E0;
  height: 128rpx;
  color: #B0B0B0;
  font-size: 34rpx;
  position: relative;
}

.c-line input,
.c-line picker.active {
  color: #333333;
}

.c-line picker {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.c-line picker view {
  line-height: 128rpx;
}

.c-line input {
  width: 100%;
  height: 100%;
  line-height: 128rpx;
}

.c-line input {}

.c-tips {
  color: #B0B0B0;
  font-size: 24rpx;
  margin-top: 26rpx;
}

.c-finish {
  background-color: #E0E0E0;
  color: #fff;
  border-radius: 8rpx;
  height: 98rpx;
  line-height: 98rpx;
  margin-top: 70px;
  text-align: center;
}

.c-finish.active {
  background-color: #FF4338;
  color: #fff;
}

.triangle {
  position: absolute;
  right: 5rpx;
  top: 60rpx;
  width: 0;
  height: 0;
  border-left: 10rpx solid transparent;
  border-right: 10rpx solid transparent;
  border-top: 14rpx solid #333333;
}