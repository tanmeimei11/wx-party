.balance {
  width: 100%;
  height: 560rpx;
  background-image: url(https://inimg02.jiuyan.info/in/2017/12/04/AE93F783-6B9C-4B18-4D22-21189F0ECB0A.jpg);
  background-repeat: no-repeat;
  background-size: cover;
  background-position: center;
  position: relative;
  text-align: center;
  padding-top: 132rpx;
  box-sizing: border-box;
}

.balance .title {
  margin: 0 auto;
  width: 160rpx;
  height: 30rpx;
  position: relative;
  line-height: 30rpx;
  font-size: 24rpx;
  color: #ff1d1a;
}


