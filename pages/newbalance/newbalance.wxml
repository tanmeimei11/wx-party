<view class="container">
  <!-- 埋点 -->
  <image src="{{trackSeed}}" style="width:0;height:0;display: block" />
  <view class="balance">
    <view class="title">
      <text>我的鼓励金</text>
    </view>
    <view class="money">{{balance}}</view>
    <text class="time">报名成功时，鼓励金可以直接抵用现金</text>
  </view>

  <view class="balance-redpacket">
    <view class="redpacketNum">待拆红包（剩余
      <text>{{listLast}}</text>个红包待拆）</view>
    <scroll-view class="redpacketList" scroll-x style="width: 100%">
      <block wx:for="{{packetList}}">
        <view class="redpacket" catchtap="openPacket" data-item="{{item}}">
          <view class="avatar" style="background-image: url({{item.user_avatar}});"></view>
          <view class="name">{{item.is_allow ? item.nick_name : '待拆红包'}}</view>
          <view class="detail">{{item.detail}}</view>
        </view>
      </block>
    </scroll-view>
  </view>

