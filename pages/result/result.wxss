/**index.wxss**/

@import '../../components/seckill/result/index.wxss';
.container {
  padding-bottom: 150rpx;
}

.c-other {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  background-color: #fff;
  box-sizing: border-box;
  padding: 20rpx;
  border-top: solid 1rpx #E0E0E0;
  box-shadow: rgba(0, 0, 0, 0.1) 0rpx 6rpx 10rpx 0rpx;
  background: rgba(255, 255, 255, 0.94);
}

.c-other view {
  display: inline-block;
  vertical-align: middle;
}

.c-other .s-logo {
  width: 64rpx;
  height: 64rpx;
  background-image: url(https://inimg07.jiuyan.info/in/2017/11/30/EB192FF8-32E4-B90C-AA8F-1E9761410466.jpg);
  background-repeat: no-repeat;
  background-size: contain;
  background-position: center;
  margin-right: 16rpx;
}

.c-other .s-text {
  color: #333333;
  font-size: 28rpx;
}

.c-other .s-look {
  width: 140rpx;
  height: 60rpx;
  line-height: 60rpx;
  color: #FF4338;
  font-size: 28rpx;
  border: solid 1rpx #FF4338;
  text-align: center;
  border-radius: 8rpx;
  float: right;
}

.r-txt {
  width: 750rpx;
  margin-top: 71rpx;
}

.r-txt .r-img {
  width: 129rpx;
  height: 129rpx;
  background-image: url(https://inimg07.jiuyan.info/in/2017/10/31/1B56058C-0CEE-8710-CB3D-CBCF6D4EC8D9.png);
  background-repeat: no-repeat;
  background-size: contain;
  background-position: center;
  margin: auto;
}

.r-txt .r-suc-txt {
  font-size: 40rpx;
  margin: auto;
  text-align: center;
}

.r-txt .r-txt1 {
  font-size: 28rpx;
  color: #888;
  text-align: center;
  margin-top: 96rpx;
}

.r-txt .r-txt2 {
  font-size: 28rpx;
  color: #888;
  text-align: center;
}

.r-link {
  width: 420rpx;
  padding-bottom: 64rpx;
  border-radius: 8rpx;
  background: #fff;
  box-shadow: 0 0 15rpx 0 rgba(0, 0, 0, 0.1);
  margin: 50rpx auto;
}

.r-link .r-link-img {
  width: 120rpx;
  height: 120rpx;
  margin: 60rpx auto 0;
  background-image: url(https://inimg07.jiuyan.info/in/2017/11/30/EB192FF8-32E4-B90C-AA8F-1E9761410466.jpg);
  background-repeat: no-repeat;
  background-size: contain;
  background-position: center;
}

.r-link {
  text-align: center;
}

.r-link .r-link-name {
  margin-top: 16rpx;
  font-size: 28rpx;
  color: #333;
}

.r-link .r-link-wxid {
  font-size: 24rpx;
  color: #888;
  margin-top: 5rpx;
}

.r-link .r-link-btn {
  width: 320rpx;
  height: 80rpx;
  border: 1rpx solid #FF4338;
  border-radius: 100rpx;
  background: #fff;
  margin: 60rpx auto 0;
  font-size: 28rpx;
  color: #FF4338;
  line-height: 80rpx;
  position: relative;
  overflow: hidden;
}